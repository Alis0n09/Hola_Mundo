        "valor1 = int(input(\" Ingerese el primer numero\\n\"))\n",
        "valor2 = int(input(\" Ingerese el segundo numero\\n\"))\n",
        "resultado = 0\n",
        "operacion = \"Ninguna\"\n",
        "if opcion == \"1\":\n",
        "    resultado = valor1 + valor2\n",
        "    operacion = \"suma\"\n",
        "elif opcion == \"2\":\n",
        "    resultado = valor1 - valor2\n",
        "    operacion = \"resta\"\n",
